
{
    "swagger": "2.0",
    "info": {
        "title": "Documentantion of My commands",
        "description": "Created by Bryan Tamayo",
        "version": "0.0.1"
    },
    "basePath": "/api/v1",
    "tags": [
        {
            "name": "Users"
        },
        {
            "name": "Info page"
        },
        {
            "name": "Sub categories"
        }
    ],
    "paths": {
        "/users/login": {
            "post": {
                "tags": [
                    "Users"
                ],
                "summary": "Login. Without token",
                "description": "Prevously, put {process.env.PATH_ADMIN}/api/v1 in the endpoint.",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "schema": {
                            "type": "object",
                            "required": [
                                "email",
                                "password"
                            ],
                            "properties": {
                                "email": {
                                    "type": "string"
                                },
                                "password": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "schema": {
                            "type": "object",
                            "properties": {
                                "status": {
                                    "type": "string"
                                },
                                "data": {
                                    "type": "object",
                                    "properties": {
                                        "userName": {
                                            "type": "string"
                                        },
                                        "email": {
                                            "type": "string"
                                        },
                                        "rol": {
                                            "type": "string",
                                            "enum" : [
                                                "admin",
                                                "user"

                                            ]
                                        },
                                        "xen": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users/register": {
            "post": {
                "tags": [
                    "Users"
                ],
                "summary": "Create a user. Without token",
                "description": "Prevously, put {process.env.PATH_ADMIN}/api/v1 in the endpoint.",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "schema": {
                            "type": "object",
                            "required": [
                                "userName",
                                "password",
                                "passwordConfirm",
                                "email"
                            ],
                            "properties": {
                                "userName": {
                                    "type": "string"
                                },
                                "password": {
                                    "type": "string"
                                },
                                "passwordConfirm": {
                                    "type": "string"
                                },
                                "email": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "schema": {
                            "type": "object",
                            "properties": {
                                "status": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/infopage": {
            "get": {
                "tags": [
                    "Info page"
                ],
                "summary": "Increment the counter of views of the page. Without token.",
                "description": "Increment count in 1 of count of views web page. Counters to each month.",
                "responses": {
                    "200": {
                        "schema": {
                            "type": "object",
                            "properties": {
                                "status": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/subcategories/{id_category}": {
            "post": {
                "tags": [
                    "Sub categories"
                ],
                "summary": "Create a subcategory. With token.",
                "description": "Prevously, put {process.env.PATH_ADMIN}/api/v1 in the endpoint. Create a subcategory. `id_category` is the id of sub category",
                "parameters": [
                    {
                        "in": "header",
                        "name": "xen",
                        "schema": {
                            "type" : "string"
                        },
                        "required": "true",
                        "default": "Bearer my_token"
                    },
                    {
                        "in": "body",
                        "name": "body",
                        "schema": {
                            "type": "object",
                            "required": [
                                "en",
                                "es",
                                "color"
                            ],
                            "properties": {
                                "en": {
                                    "type": "string"
                                },
                                "es": {
                                    "type": "string"
                                },
                                "color": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "schema": {
                            "type": "object",
                            "properties": {
                                "status": {
                                    "type": "string"
                                },
                                "data": {
                                    "type": "object",
                                    "properties": {
                                        "en": {
                                            "type": "string"
                                        },
                                        "es": {
                                            "type": "string"
                                        },
                                        "color": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}